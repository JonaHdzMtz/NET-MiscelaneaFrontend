@model ProductDTO;

@{
	ViewData["title"] = "Registro de producto";
	string code = ViewData["codeRegisterProduct"]+ "";

}
@if (ViewData["codeRegisterProduct"] != null)
{
	<div class="card">
		@if (code.Equals("200")){
			<h1>SE GUARDO @code</h1>
			<form asp-controller="Product" asp-action="Index">
				<button  type="submit" href="#" class="btn btn-success">Entendido</button>
			</form>
		}else{
			<h1>MAMASTE @code</h1>
		}
	</div>
}
else
{

	<div class="card p-3">
		<form action="" method="post">
			<div class="">
				<div class="mb-3">
					<label class="form-label" asp-for="ProductName"></label>
					<input asp-for="ProductName" class="form-control" type="text" placeholder="coca cola" />
					<span asp-validation-for="ProductName" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label" asp-for="ProductDescription"></label>
					<input asp-for="ProductDescription" class="form-control" type="text" placeholder="coca cola" />
					@* <textarea asp-for="ProductDescription" class="form-control" placeholder="ASdasd"></textarea> *@
				</div>
				<div class="mb-3">
					<label class="form-label" asp-for="Price"></label>
					<input asp-for="Price" class="form-control" type="text" placeholder="coca cola" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label class="form-label" asp-for="Stock"></label>
					<input asp-for="Stock" class="form-control" type="text" placeholder="coca cola" />
					<span asp-validation-for="Stock" class="text-danger"></span>
				</div>
			</div>
			<div class="d-flex justify-content-end">
				<button class="btn btn-success" type="submit"> Registrar</button>
			</div>
		</form>
	</div>
}
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
